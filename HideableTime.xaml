<UserControl x:Class="CSharpTechnicalTest.HideableTime"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CSharpTechnicalTest"
             mc:Ignorable="d" 
             Name="HideableTimeWindow"
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <Grid x:Name="UnHiddenGrid" Visibility="Visible">
            <StackPanel>
                <Label HorizontalAlignment="Center" Content="{Binding ZoneLabel, ElementName=HideableTimeWindow}"/>
                <TextBlock TextAlignment="Center" Text="{Binding DateContent, ElementName=HideableTimeWindow}"/>
            </StackPanel>
        </Grid>
    </Grid>
</UserControl>
